<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Savings Goal Label -->
    <TextView
        android:id="@+id/savings_goal_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/hint_savings_goal"
        android:textColor="@android:color/darker_gray"
        android:textSize="18sp" />

    <!-- Savings Goal Input -->

    <!-- Current Savings Label -->

    <EditText
        android:id="@+id/savings_goal_input"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginBottom="16dp"
        android:autofillHints="currencyAmount"
        android:background="@drawable/edittext_bg"
        android:hint="@string/hint_savings_goal"
        android:inputType="numberDecimal"
        android:padding="16dp" />

    <TextView
        android:id="@+id/current_savings_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/hint_current_savings"
        android:textColor="@android:color/darker_gray"
        android:textSize="18sp" />


    <EditText
        android:id="@+id/current_savings_input"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="24dp"
        android:autofillHints="currencyAmount"
        android:background="@drawable/edittext_bg"
        android:hint="@string/hint_current_savings"
        android:inputType="numberDecimal"
        android:padding="16dp" />


    <Button
        android:id="@+id/update_savings_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/colorPrimary"
        android:padding="12dp"
        android:text="@string/update_savings_button_text"
        android:textColor="@android:color/white"
        android:textSize="16sp" />
</LinearLayout>
